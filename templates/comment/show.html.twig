{% extends 'base.html.twig' %}

{% block title %}Commentaire{% endblock %}

{% block body %}
    <h1>Commentaire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ comment.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_comment_index') }}">retour à la liste</a>

    <a href="{{ path('app_comment_edit', {'id': comment.id}) }}">modifier</a>

    {{ include('comment/_delete_form.html.twig') }}
{% endblock %}
