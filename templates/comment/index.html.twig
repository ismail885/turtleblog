{% extends 'base.html.twig' %}

{% block title %}Index des Commentaires{% endblock %}

{% block body %}
    <h1>Index des Commentaires</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Contenu</th>
                <th>Créé le</th>
                <th>Statut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.content }}</td>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ comment.status }}</td>
                <td>
                    <a href="{{ path('app_comment_show', {'id': comment.id}) }}">afficher</a>
                    <a href="{{ path('app_comment_edit', {'id': comment.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_comment_new') }}">Créer un nouveau</a>
{% endblock %}
