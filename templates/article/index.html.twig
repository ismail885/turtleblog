{# templates/article/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Liste des Articles{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Les Articles</h1>

        <a href="{{ path('post_new') }}" class="btn btn-success mb-4">Ajouter un article</a>

        <div class="row">
            {% for post in posts %}
                <div class="col-md-4">
                    <div class="card mb-4">
                        {% if post.picture %}
                            <img src="{{ asset('uploads/pictures/' ~ post.picture) }}" class="card-img-top" alt="Image de {{ post.title }}" style="width: 100%; height: auto; object-fit: cover;">
                        {% else %}
                            <img src="{{ asset('uploads/pictures/default.png') }}" class="card-img-top" alt="Image par défaut" style="width: 100%; height: auto; object-fit: cover;">
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ post.title }}</h5>
                            <p class="card-text">{{ post.description|slice(0, 100) }}...</p>
                            <p class="card-text">Publié le: {{ post.publishedAt|date('d/m/Y') }}</p>
                            <a href="{{ path('post_show', {'id': post.id}) }}" class="btn btn-primary">Voir plus</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
