{# templates/post/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h1 class="h3 mb-4 text-center">Modifier l'article</h1>

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.title) }}
            {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.title) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.content) }}
            {{ form_widget(form.content, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.content) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.category) }}
            {{ form_widget(form.category, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.category) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.publishedAt) }}
            {{ form_widget(form.publishedAt, { 'attr': {'class': 'form-control', 'value': form.publishedAt.vars.value|default("now"|date("Y-m-d")) } }) }}
            {{ form_errors(form.publishedAt) }}
        </div>

        <button class="btn btn-primary">Enregistrer les modifications</button>
    {{ form_end(form) }}
</div>
{% endblock %}
